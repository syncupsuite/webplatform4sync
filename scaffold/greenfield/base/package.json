{
  "name": "{{REPO_NAME}}",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "doppler run -- vite dev",
    "build": "doppler run -- vite build",
    "preview": "doppler run -- vite preview",
    "deploy:staging": "doppler run --config stg -- wrangler deploy --env staging",
    "deploy:production": "doppler run --config prd -- wrangler deploy --env production",
    "health:test": "node scripts/health-check.mjs",
    "db:generate": "doppler run -- drizzle-kit generate",
    "db:push": "doppler run -- drizzle-kit push",
    "db:studio": "doppler run -- drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "doppler run -- playwright test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.5.0",
    "@neondatabase/serverless": "^1.0.0",
    "drizzle-orm": "^0.39.0",
    "drizzle-zod": "^0.7.0",
    "better-auth": "^1.2.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "vite": "^7.0.0",
    "@cloudflare/vite-plugin": "^1.0.0",
    "@vitejs/plugin-react": "^4.5.0",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "drizzle-kit": "^0.30.0",
    "wrangler": "^4.0.0",
    "vitest": "^3.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "playwright": "^1.50.0",
    "@playwright/test": "^1.50.0",
    "eslint": "^9.0.0",
    "prettier": "^3.5.0",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "eslint-plugin-react-hooks": "^5.0.0"
  }
}
